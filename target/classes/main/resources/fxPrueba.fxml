<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>

<?import javafx.collections.FXCollections?>

<?import javafx.scene.shape.Circle?>
<GridPane fx:controller="coordenadas.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="TOP_LEFT" hgap="10" vgap="10">
    <padding><Insets top="25" right="25" left="25"/></padding>

    <Pane fx:id="mapContainer"
          GridPane.columnIndex="0"
          GridPane.rowIndex="1"
          GridPane.columnSpan="22"
          prefWidth="960.0"
          prefHeight="480.0"
          styleClass="map-pane">
        <children>
            <Circle fx:id="circulo"
                    managed="false"
                    radius="4"
                    fill="RED"
                    stroke="WHITE"
                    strokeWidth="1.5"
                    visible="false"/>
        </children>
    </Pane>


    <Text text="Convert from: "
          GridPane.columnIndex="0" GridPane.rowIndex="0" />

    <ChoiceBox fx:id="cajaDeEntrada" prefWidth="150" value="Degrees" GridPane.columnIndex="1" GridPane.rowIndex="0" onAction="#convertFrom">

        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Degrees"/>
                <String fx:value="Degrees Minutes Seconds"/>
                <String fx:value="Military Grid"/>
            </FXCollections>
        </items>
    </ChoiceBox>

    <TextField fx:id="inputField" promptText="123.456째 789.012째"  onMouseClicked="#textoFrom" onKeyTyped="#typedFrom"
            GridPane.columnIndex="2" GridPane.rowIndex="0" GridPane.columnSpan="2" />

    <Text text="To: "
          GridPane.columnIndex="19" GridPane.rowIndex="0" />

    <ChoiceBox fx:id="cajaDeSalida" value = "Degrees Minutes" prefWidth="150" GridPane.columnIndex="20" GridPane.rowIndex="0" onAction="#convertTo">

        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Degrees Minutes"/>
                <String fx:value="Degrees Minutes Seconds"/>
                <String fx:value="Military Grid"/>
            </FXCollections>
        </items>
    </ChoiceBox>

    <TextField fx:id="outputField" promptText="123째 45' 67째 89'" onMouseClicked="#textoTo" onKeyTyped="#typedTo"
            GridPane.columnIndex="21" GridPane.rowIndex="0" GridPane.columnSpan="2"/>

</GridPane>
